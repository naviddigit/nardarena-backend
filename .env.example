# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api

# Database (PostgreSQL)
DATABASE_URL="postgresql://nard_user:nard_password_2024@localhost:5432/nard_arena?schema=public"

# JWT Secrets (CHANGE IN PRODUCTION)
JWT_ACCESS_SECRET=your_super_secret_jwt_access_key_change_this_in_production_123456789
JWT_REFRESH_SECRET=your_super_secret_jwt_refresh_key_change_this_in_production_987654321
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:8083

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379

# ==========================================
# WALLET & CRYPTO SYSTEM
# ==========================================

# Master encryption key for wallet private keys
# CRITICAL: Must be 32+ characters, keep secret, never commit to git
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WALLET_MASTER_KEY=your_256bit_encryption_key_here_CHANGE_IN_PRODUCTION_this_is_critical

# Blockchain RPC URLs (will be overridden by system_settings if testnet mode)
BSC_RPC_URL=https://bsc-dataseed.binance.org
TRON_RPC_URL=https://api.trongrid.io

# ==========================================

# Email (Optional - for verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Logging
LOG_LEVEL=debug
